@model Coursework.Web.Models.CommentViewModel

@{
    ViewBag.Title = "Leave a comment";
}
@using (Html.BeginForm("Comment", "Flower", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <br>
    <h2>Leave a comment</h2>
    <div class="form-horizontal">
        <hr />
        <br>
        @Html.HiddenFor(model => model.FlowerId)
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <div class="form-group card-wrapper">
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <input type="submit" value="Leave comment" class="btn btn-default btn-block btn-info" />
            </div>
        </div>
}
