@model Coursework.Web.Models.PictureViewModel

@{
    ViewBag.Title = "AddPhoto";
}

@using (Html.BeginForm("AddPhoto", "Flower", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <br>
    <h2>Upload Photo</h2>
    <div class="form-horizontal">
        <hr/>
        <br>
        @Html.HiddenFor(model => model.FlowerId)
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                @Html.EditorFor(model => model.Image, new {htmlAttributes = new {@class = "form-control"}})
                <input type="file" name="uploadImage"/>
                @Html.ValidationMessageFor(model => model.Image, "", new {@class = "text-danger"})
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input type="submit" value="Upload" class="btn btn-block btn-info"/>
        </div>
    </div>
    </div>
}
    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

