@model Coursework.Web.Models.UserViewModel
@{
    ViewBag.Title = "Buy";
}
<hr />
<br>
<h2>Buy more flowers</h2>

<script type="text/javascript">
function doSomething(text)
  {
    if (text.length > 0)
      document.getElementById("submit_button").disabled = false;
    else
      document.getElementById("submit_button").disabled = true;
  }
</script>

@using (Html.BeginForm("Buy", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-horizontal">
        <hr />
        <br>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <div class="form-group">
                    <label for="buy">Select a number of flowers to purchase:</label>
                    <input type="number" name="count" id="message" min="1" max="999" class="form-control" onchange="doSomething(this.value)">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group card-wrapper">
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input type="submit" value="Purchase" id="submit_button" class="btn btn-default btn-block btn-info" disabled="true"/>
        </div>
    </div>
}